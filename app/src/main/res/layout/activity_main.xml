<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="#121212"
    tools:ignore="ExtraText"> <!-- Background gelap -->

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:background="#1F1F1F"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <Button
                android:id="@+id/btn7"
                style="@style/CustomButton"
                android:text="7" />
            <Button
                android:id="@+id/btn8"
                style="@style/CustomButton"
                android:text="8" />
            <Button
                android:id="@+id/btn9"
                style="@style/CustomButton"
                android:text="9" />
            <Button
                android:id="@+id/btnDivide"
                style="@style/CustomButton"
                android:text="/" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn4"
                style="@style/CustomButton"
                android:text="4" />
            <Button
                android:id="@+id/btn5"
                style="@style/CustomButton"
                android:text="5" />
            <Button
                android:id="@+id/btn6"
                style="@style/CustomButton"
                android:text="6" />
            <Button
                android:id="@+id/btnMultiply"
                style="@style/CustomButton"
                android:text="*" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn1"
                style="@style/CustomButton"
                android:text="1" />
            <Button
                android:id="@+id/btn2"
                style="@style/CustomButton"
                android:text="2" />
            <Button
                android:id="@+id/btn3"
                style="@style/CustomButton"
                android:text="3" />
            <Button
                android:id="@+id/btnMinus"
                style="@style/CustomButton"
                android:text="-" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/btn0"
                style="@style/CustomButton"
                android:text="0" />
            <Button
                android:id="@+id/btnDelete"
                style="@style/CustomButton"
                android:text="Del" />
            <Button
                android:id="@+id/btnEqual"
                style="@style/CustomButton"
                android:text="=" />
            <Button
                android:id="@+id/btnPlus"
                style="@style/CustomButton"
                android:text="+" />
        </TableRow>

    </TableLayout>

</LinearLayout>
